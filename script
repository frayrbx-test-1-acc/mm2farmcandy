local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local rootPart = character:WaitForChild("HumanoidRootPart")

local visitedPositions = {}
local isActive = false
local flySpeed = 15
local collected = 0
local startTime = 0
local antiAfkEnabled = false
local autoResetEnabled = false

player.CharacterAdded:Connect(function(char)
	character = char
	rootPart = char:WaitForChild("HumanoidRootPart")
	visitedPositions = {}
end)

local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "AutoFarmGui"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 200, 0, 280)
frame.Position = UDim2.new(0.5, -120, 0.3, 0)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local stroke = Instance.new("UIStroke", frame)
stroke.Color = Color3.fromRGB(255, 140, 0)
stroke.Thickness = 2

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, -12, 0, 28)
title.Position = UDim2.new(0, 6, 0, 5)
title.Text = "ðŸŽƒ Fray.rbx || Autofarm"
title.TextColor3 = Color3.fromRGB(255, 165, 0)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.TextSize = 16
title.TextXAlignment = Enum.TextXAlignment.Left

local separator = Instance.new("Frame", frame)
separator.Size = UDim2.new(1, -12, 0, 1)
separator.Position = UDim2.new(0, 6, 0, 35)
separator.BackgroundColor3 = Color3.fromRGB(120, 60, 180)
separator.BorderSizePixel = 0

local function animateButton(btn)
	btn.MouseEnter:Connect(function()
		btn.BackgroundColor3 = Color3.fromRGB(120, 60, 180)
	end)
	btn.MouseLeave:Connect(function()
		btn.BackgroundColor3 = Color3.fromRGB(50, 30, 70)
	end)
end

local function makeButton(y, text)
	local btn = Instance.new("TextButton", frame)
	btn.Size = UDim2.new(0, 180, 0, 28)
	btn.Position = UDim2.new(0.5, -90, 0, y)
	btn.Text = text
	btn.BackgroundColor3 = Color3.fromRGB(50, 30, 70)
	btn.TextColor3 = Color3.fromRGB(255, 165, 0)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 14
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
	animateButton(btn)
	return btn
end

local function makeLabel(y, text)
	local lbl = Instance.new("TextLabel", frame)
	lbl.Size = UDim2.new(0, 180, 0, 20)
	lbl.Position = UDim2.new(0.5, -90, 0, y)
	lbl.Text = text
	lbl.BackgroundTransparency = 1
	lbl.TextColor3 = Color3.fromRGB(255, 140, 0)
	lbl.Font = Enum.Font.Gotham
	lbl.TextSize = 14
	lbl.TextXAlignment = Enum.TextXAlignment.Left
	return lbl
end

local toggleBtn = makeButton(45, "Auto: OFF")
local antiAfkBtn = makeButton(85, "AFK: OFF")
local autoResetBtn = makeButton(125, "AutoReset: OFF")
local speedBtn = makeButton(165, "Speed: 15")

local counterLabel = makeLabel(205, "Candies: 0")
local timerLabel = makeLabel(225, "Time: 0s")
local rateLabel = makeLabel(245, "Rate: 0/h")

local function getClosestCoin()
	local closest, shortest = nil, math.huge
	for _, obj in ipairs(workspace:GetDescendants()) do
		if obj:IsA("BasePart") and obj.Name == "Coin_Server" then
			local dist = (obj.Position - rootPart.Position).Magnitude
			if dist < shortest and dist < 250 and not visitedPositions[obj] then
				closest = obj
				shortest = dist
			end
		end
	end
	return closest
end

local function moveTowards(targetPos, delta)
	if not rootPart then return end
	local direction = (targetPos - rootPart.Position)
	if direction.Magnitude < delta then
		rootPart.CFrame = CFrame.new(targetPos)
	else
		rootPart.CFrame = CFrame.new(rootPart.Position + direction.Unit * delta)
	end
end

toggleBtn.MouseButton1Click:Connect(function()
	isActive = not isActive
	toggleBtn.Text = isActive and "Auto: ON" or "Auto: OFF"
	if isActive then
		collected = 0
		startTime = tick()
		visitedPositions = {}
		task.spawn(function()
			while isActive do
				local elapsed = tick() - startTime
				timerLabel.Text = "Time: "..math.floor(elapsed).."s"
				local rate = elapsed>0 and math.floor((collected/elapsed)*3600) or 0
				rateLabel.Text = "Rate: "..rate.."/h"
				task.wait(0.1)
			end
		end)
		task.spawn(function()
			while isActive do
				if not rootPart or not rootPart.Parent then
					task.wait(0.5)
					rootPart = character:FindFirstChild("HumanoidRootPart")
				end
				local coin = getClosestCoin()
				if coin and coin.Parent then
					moveTowards(coin.Position, flySpeed * 0.5)
					if (rootPart.Position - coin.Position).Magnitude < 3 then
						visitedPositions[coin] = true
						collected += 1
						counterLabel.Text = "Candies: "..collected
					end
				end
				task.wait(0.05)
			end
		end)
	end
end)

antiAfkBtn.MouseButton1Click:Connect(function()
	antiAfkEnabled = not antiAfkEnabled
	antiAfkBtn.Text = antiAfkEnabled and "AFK: ON" or "AFK: OFF"
end)

speedBtn.MouseButton1Click:Connect(function()
	flySpeed += 1
	if flySpeed > 25 then flySpeed = 10 end
	speedBtn.Text = "Speed: "..flySpeed
end)

autoResetBtn.MouseButton1Click:Connect(function()
	autoResetEnabled = not autoResetEnabled
	autoResetBtn.Text = autoResetEnabled and "AutoReset: ON" or "AutoReset: OFF"
end)

task.spawn(function()
	while true do
		if antiAfkEnabled and rootPart then
			rootPart.CFrame = rootPart.CFrame + Vector3.new(0,0,0.01)
		end
		task.wait(30)
	end
end)

task.spawn(function()
	while true do
		if autoResetEnabled and player.Character then
			local coinLabel = player:WaitForChild("PlayerGui"):WaitForChild("MainGUI")
				:WaitForChild("Game"):WaitForChild("CoinBags")
				:WaitForChild("Container"):WaitForChild("Candy")
				:WaitForChild("CurrencyFrame"):WaitForChild("Icon")
			local coins = tonumber(coinLabel.Text)
			if coins and coins >= 40 then
				local char = player.Character
				task.spawn(function()
					if char then
						char:BreakJoints()
					end
				end)
			end
		end
		task.wait(1)
	end
end)
